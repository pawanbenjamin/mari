---
import {
  BackgroundImage,
  ImageSupportDetection
} from "astro-imagetools/components";

import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import hands from "../images/hands-on-tummy.jpg";
---

<Layout title="contact">
  <PageHeader title="" desc="contact" next="home" prev="faq" />
  <div class="container">
    <section class="returning">
      <h3>Returning Patients</h3>
      <p>Follow the link below</p>
      <button>Book Appointment</button>
    </section>
    <section class="new">
      <h3>New Patients</h3>
      <p>
        Please fill out the form below and we will get back to you as soon as
        possible!
      </p>
      <div class="form-container">
        <form id="contact-form">
          <input type="text" name="name" placeholder="name" />
          <input type="email" name="email" placeholder="email" />
          <input type="text" name="subject" placeholder="subject" />
          <input type="text" name="message" placeholder="message" />
          <button type="submit">Submit</button>
        </form>
      </div>
    </section>
  </div>
</Layout>
<style>
  .container {
    margin-top: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 4rem;
    text-align: center;
    padding: 0 2rem;
  }

  .new {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 66vh;
    padding: 0 3rem;
    background-image: url(`/two.jpg`);
  }

  .form-container {
