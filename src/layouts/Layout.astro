---
import { SEO } from "astro-seo";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href="https://www.mariposawellnessllc.com" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SEO
      title={title}
      description="Integrative Manual Physical Therapy and Pelvic Health Washington DC Therapists"
      openGraph={{
        basic: {
          title: "Mariposa Wellness LLC",
          type: "Health Care Physical Therapy Pelvic Floor",
          image:
            "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png"
        }
      }}
    />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --base-padding: 1rem;
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
      }

      hr {
        opacity: 0.3;
        margin: 0 6rem;
      }
      a {
        text-decoration: none;
        color: black;
      }

      html {
        background-color: #f6f6f6;
      }

      /**Buttons */
      br {
        height: 2rem;
      }
      button {
        padding: 0.5rem 2rem;
        border-radius: 2px;
        font-size: 0.9rem;
        color: rgb(21, 21, 52);
        font-weight: 500;
        background-color: #e8d2d2;
        border: none;
        line-height: 1rem;
      }

      button:hover {
        background-color: #cab6b6;
      }

      /** Global Classes */
      .white {
        color: white;
        opacity: 0.7;
      }

      .hidden {
        /* display: none; */
        pointer-events: none;
        opacity: 0;
      }

      .bp {
        padding: var(--base-padding);
      }

      .pic {
        margin: var(--base-padding);
      }

      li {
        list-style: none;
      }

      @media (min-width: 820px) {
        main {
          margin-top: 2rem;
          margin-left: auto;
          margin-right: auto;
          width: 69%;
        }
      }

      @media (min-width: 1200px) {
        main {
          margin-top: 2rem;
          margin-left: auto;
          margin-right: auto;
          width: 54%;
        }
      }
    </style>
  </body>
</html>
